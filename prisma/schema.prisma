generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int           @id @default(autoincrement())      
  first_name String
  last_name String
  email String
  cpf String @unique
  dob String
  password    String
  Cards cards[]
  transactions transactions[]
  payments payments[]
}

model cards {
  id          Int           @id @default(autoincrement())
  user users @relation(fields: [user_id], references: [id]) 
  user_id Int
  number String @unique
  holder_name String
  security_code Int
  expiration_date String
  password String
  blocked Boolean
}

model transactions {
  id          Int           @id @default(autoincrement())
  user users @relation(fields: [user_id], references: [id]) 
  user_id Int 
  description String 
  date String
  type String
  amount Float
}

model payments {
  id          Int           @id @default(autoincrement())
  user users @relation(fields: [user_id], references: [id]) 
  user_id Int
  company_name String
  date String
  amount Float
}